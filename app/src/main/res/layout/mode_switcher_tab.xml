<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/mode_switcher_tab_background"
    android:backgroundTint="?backgroundColor"
    android:theme="@style/Theme.FusionIME.TabBar.Item"
    android:layout_width="@dimen/mode_tab_width"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="4dp">

    <TextView
        android:id="@+id/label"
        android:textSize="20sp"
        android:textColor="?foregroundColor"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>