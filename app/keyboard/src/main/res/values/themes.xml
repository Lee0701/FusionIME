<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FusionIME">
    </style>

    <style name="Theme.FusionIME.Keyboard">
        <item name="backgroundColor">@color/keyboard_bg_light</item>
    </style>

    <style name="Theme.FusionIME.Keyboard.Popup">
        <item name="backgroundColor">@color/key_bg_light_unpressed</item>
        <item name="foregroundColor">@color/black</item>
    </style>

    <style name="Theme.FusionIME.Keyboard.Key">
        <item name="backgroundColor">@color/key_bg_static_light</item>
        <item name="foregroundColor">@color/black</item>
    </style>

    <style name="Theme.FusionIME.Keyboard.Key.Modifier">
        <item name="backgroundColor">@color/key_bg_static_light_mod</item>
    </style>

    <style name="Theme.FusionIME.Keyboard.Key.Return">
        <item name="backgroundColor">@color/key_bg_static_light_return</item>
    </style>

    <style name="Theme.FusionIME.Candidates">
        <item name="backgroundColor">@color/candidate_bg_light</item>
    </style>

    <style name="Theme.FusionIME.Candidates.Item">
        <item name="foregroundColor">@color/black</item>
    </style>

    <style name="Theme.FusionIME.TabBar">
        <item name="backgroundColor">@color/candidate_bg_light</item>
    </style>

    <style name="Theme.FusionIME.TabBar.Item">
        <item name="backgroundColor">@color/tabbar_item_light</item>
        <item name="foregroundColor">@color/black</item>
    </style>
</resources>